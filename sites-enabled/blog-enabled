server {
    listen       80;
    server_name www.ilaipi.com;
    return 301 https://www.ilaipi.com$request_uri;
}

server {
    listen      443 ssl;
    server_name www.ilaipi.com;

    include /etc/nginx/snippets/ssl_params;
    include /etc/nginx/snippets/proxy_params;

    location / {
        proxy_pass http://blog-wp:80;
    }
}
