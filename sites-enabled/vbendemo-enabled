server {
    listen       80;
    server_name vbendemo.ilaipi.com;
    return 301 https://vbendemo.ilaipi.com$request_uri;
}

server {
    listen      443 ssl;
    listen      443 proxy_protocol;
    server_name vbendemo.ilaipi.com;

    include /etc/nginx/snippets/ssl_params;
    include /etc/nginx/snippets/proxy_protocol_params;
    include /etc/nginx/snippets/proxy_params;

    location / {
        proxy_pass http://vbendemo-frontend:80;
    }
    
    location /vbenapi {
        proxy_pass http://vbendemo-backend_admin:6000;
    }
}
