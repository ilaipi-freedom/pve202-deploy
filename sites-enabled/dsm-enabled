server {
    listen       80;
    server_name dsm.ilaipi.com;
    return 301 https://dsm.ilaipi.com$request_uri;
}

server {
    listen      443 ssl;
    server_name dsm.ilaipi.com;

    include /etc/nginx/snippets/ssl_params;
    include /etc/nginx/snippets/proxy_params;

    location / {
        proxy_pass http://192.168.5.251:5000;
    }
}
