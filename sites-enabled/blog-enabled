server {
    listen       80;
    server_name ilaipi.com;

    include /etc/nginx/snippets/proxy_protocol_params;
    include /etc/nginx/snippets/proxy_params;

    location / {
        proxy_pass http://blog-wp:80;
    }
}

server {
    listen       80;
    server_name www.ilaipi.com;

    include /etc/nginx/snippets/proxy_protocol_params;
    include /etc/nginx/snippets/proxy_params;

    client_max_body_size 20m;

    location / {
        proxy_pass http://blog-wp:80;
    }
}
